<Window x:Class="NetworkTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="网络工具箱" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="StatusText" Margin="10" FontSize="16"/>
            <Button x:Name="RefreshButton" Content="检测网络状态" Click="RefreshStatus" Margin="5" Padding="10"/>
            <Button x:Name="RestartButton" Content="重启网络适配器" Click="RestartAdapter" Margin="5" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>